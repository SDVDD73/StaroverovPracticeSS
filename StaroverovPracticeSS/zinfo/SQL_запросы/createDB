CREATE TABLE "user" (
	"id" serial NOT NULL,
	"userName" varchar(30) NOT NULL,
	"encryptedPassword" varchar(30) NOT NULL,
	"enable" bool NOT NULL,
	CONSTRAINT "user_pk" PRIMARY KEY ("id")
) WITH (
  OIDS=FALSE
);



CREATE TABLE "role" (
	"id" serial NOT NULL,
	"role_name" varchar(30) NOT NULL,
	"enable" bool NOT NULL,
	CONSTRAINT "role_pk" PRIMARY KEY ("id")
) WITH (
  OIDS=FALSE
);



CREATE TABLE "room_user_role" (
	"id" serial NOT NULL,
	"user_id" serial NOT NULL,
	"role_id" serial NOT NULL,
	"room_id" serial NOT NULL,
	CONSTRAINT "room_user_role_pk" PRIMARY KEY ("id")
) WITH (
  OIDS=FALSE
);



CREATE TABLE "room" (
	"id" serial NOT NULL,
	"room_name" varchar(30) NOT NULL,
	"enable" bool NOT NULL,
	CONSTRAINT "room_pk" PRIMARY KEY ("id")
) WITH (
  OIDS=FALSE
);



CREATE TABLE "message" (
	"id" serial NOT NULL,
	"user_id" serial NOT NULL,
	"filling" varchar(255) NOT NULL,
	"sending_time" TIMESTAMP NOT NULL,
	"room_id" serial NOT NULL,
	"enable" bool NOT NULL,
	CONSTRAINT "message_pk" PRIMARY KEY ("id")
) WITH (
  OIDS=FALSE
);





ALTER TABLE "room_user_role" ADD CONSTRAINT "room_user_role_fk0" FOREIGN KEY ("user_id") REFERENCES "user"("id");
ALTER TABLE "room_user_role" ADD CONSTRAINT "room_user_role_fk1" FOREIGN KEY ("role_id") REFERENCES "role"("id");
ALTER TABLE "room_user_role" ADD CONSTRAINT "room_user_role_fk2" FOREIGN KEY ("room_id") REFERENCES "room"("id");


ALTER TABLE "message" ADD CONSTRAINT "message_fk0" FOREIGN KEY ("user_id") REFERENCES "user"("id");
ALTER TABLE "message" ADD CONSTRAINT "message_fk1" FOREIGN KEY ("room_id") REFERENCES "room"("id");
